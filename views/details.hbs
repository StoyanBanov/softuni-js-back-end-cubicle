{{#with cubicle}}
<h1>{{name}}</h1>
<img class="cube" src="{{imageUrl}}">
<div class="details">
  <p><span>Description:</span> {{description}}</p>
  <p><span>Difficulty level:</span> {{difficulty}}</p>
  <a class="btn" href="/">Back</a>
</div>
<h2>Accessories</h2>
<a class="btn" href="/attach/accessory/{{_id}}">Attach</a>
<div class="accessories">
  {{#if accessories}}
  {{#each accessories}}
  <div class="accessory">
    <img src="{{imageUrl}}" alt="stickerName">
    <h3>{{name}}e</h3>
    <p>{{description}}</p>
  </div>
  {{/each}}
  {{else}}
  <h3 class="italic">This cube has no accessories yet...</h3>
  {{/if}}
</div>
{{/with}}